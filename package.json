{
  "name": "front",
  "version": "0.0.1",
  "description": "A lightweight (<5KB) secure-by-default JavaScript micro-framework enforcing Islands Architecture",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "build": "node build.config.js",
    "build:check": "node build.config.js --check-size",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"docs/**/*.md\"",
    "size-check": "npm run build:check"
  },
  "keywords": [
    "framework",
    "islands-architecture",
    "micro-framework",
    "reactivity",
    "signals",
    "hydration",
    "esm"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.50.0",
    "uhtml": "^4.5.11"
  },
  "peerDependencies": {
    "uhtml": "^4.5.11"
  }
}
