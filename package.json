{
  "name": "frontjs-workspace",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for frontjs packages (@frontjs/core and @frontjs/actions)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm test --workspaces",
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint packages/*/src/**/*.js",
    "format": "prettier --write \"packages/*/src/**/*.js\" \"docs/**/*.md\" \"*.md\"",
    "size-check": "npm run size-check -w @frontjs/core",
    "validate:filenames": "node scripts/validate-filenames.js",
    "validate": "npm run lint && npm run validate:filenames",
    "deploy:cf": "wrangler pages deploy website --project-name=frontjs-dev --commit-dirty=true",
    "deploy:cf:prod": "wrangler pages deploy website --project-name=frontjs-dev --branch=master",
    "docs:api": "node scripts/generate-api-docs.js",
    "docs:generate": "npm run docs:core && npm run docs:actions",
    "docs:core": "jsdoc2md packages/core/src/**/*.js --files --heading-depth 2 --output website/docs/api/core.md",
    "docs:actions": "jsdoc2md packages/actions/src/**/*.js --files --heading-depth 2 --output website/docs/api/actions.md",
    "docs:serve": "npx serve website/docs",
    "types:generate": "npm run types:core && npm run types:actions",
    "types:core": "tsc --skipLibCheck --declaration --emitDeclarationOnly --allowJs --outDir packages/core/types packages/core/src/index.js",
    "types:actions": "tsc --skipLibCheck --declaration --emitDeclarationOnly --allowJs --outDir packages/actions/types packages/actions/src/index.js",
    "repomix": "npx repomix",
    "repomix:dev": "npx repomix --config .repomix/developer.config.json",
    "repomix:pm": "npx repomix --config .repomix/pm.config.json",
    "repomix:marketing": "npx repomix --config .repomix/marketing.config.json",
    "repomix:docs": "npx repomix --config .repomix/docs.config.json",
    "repomix:ai": "npx repomix --config .repomix/ai.config.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "eslint": "^8.50.0",
    "husky": "^9.1.7",
    "jsdoc-to-markdown": "^9.1.3",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "uhtml": "^4.5.11",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
